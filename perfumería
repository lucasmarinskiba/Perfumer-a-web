    <script>
        // JavaScript básico para funcionalidad del carrito
        let carrito = [];
        
        document.querySelectorAll('.btn-comprar').forEach(button => {
            button.addEventListener('click', () => {
                const producto = {
                    nombre: button.parentElement.querySelector('h3').innerText,
                    precio: button.parentElement.querySelector('.precio').innerText
                };
                carrito.push(producto);
                actualizarCarrito();
            });
        });

        function actualizarCarrito() {
            const contadorCarrito = document.querySelector('.carrito');
            contadorCarrito.textContent = `🛒 ${carrito.length}`;
        }
    </script>
